{
  "name": "vscode-better-nuxt3",
  "description": "",
  "author": "mosle",
  "license": "MIT",
  "version": "0.0.4",
  "repository": {
    "type": "git",
    "url": ""
  },
  "publisher": "mosle",
  "categories": [],
  "keywords": [],
  "engines": {
    "vscode": "^1.63.0"
  },
  "activationEvents": [
    "workspaceContains:.nuxt/tsconfig.json"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "configuration",
      "properties": {
        "vscodeBetterNuxt3.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run webpack",
    "webpack": "npm run clean && webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js",
    "webpack:dev": "npm run clean && webpack --mode none --config ./client/webpack.config.js && webpack --mode none --config ./server/webpack.config.js",
    "compile": "tsc -b",
    "compile:client": "tsc -b ./client/tsconfig.json",
    "compile:server": "tsc -b ./server/tsconfig.json",
    "watch": "tsc -b -w",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "eslint --config ./client/.eslintrc.json ./client/src/*.ts",
    "lint:server": "eslint --config ./server/.eslintrc.json ./server/src/*.ts",
    "clean": "rimraf client/out && rimraf server/out",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh",
    "spec:watch": "mocha --watch"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.3",
    "@typescript-eslint/parser": "^5.30.3",
    "eslint": "^8.19.0",
    "merge-options": "^3.0.4",
    "mocha": "^10.0.0",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "image-size": "^1.0.1",
    "probe-image-size": "^7.2.3",
    "ts-paths-resolver-esm": "git+https://github.com/mosle/ts-paths-resolver-esm.git#0.0.3"
  }
}
